<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cstructor.androidinterfaces.MainActivity">

    <Button
        android:id="@+id/uxBouncingBalls"
        android:text="Bouncing Balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/uxViewAnimation"
        android:text="View Animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/uxFrameAnimation"
        android:text="FrameAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/uxZoom"
        android:text="Zoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/uxCrossfade"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Crossfade"/>

    <Button android:id="@+id/uxAnimateLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Animate Layout"/>

    <Button android:id="@+id/uxNotification"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Notification"
        ></Button>

    <Button android:id="@+id/uxDrag"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Drag Drop"
        ></Button>

    <Button android:id="@+id/uxTouch"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Touch"
        ></Button>

    <Button android:id="@+id/uxCanvas"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Canvas"
        ></Button>

    <Button android:id="@+id/uxLoader"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Loader"
        ></Button>

    <Button android:id="@+id/uxContact"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Contact"
        ></Button>

    <TextView
      style="@style/CodeFont.Red"
        android:text="Hello" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/Numbers" />

   <Button android:id="@+id/uxLocale"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="@string/locale"
       ></Button>

   <Button android:id="@+id/uxFeatures"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Features"
       ></Button>

   <Button android:id="@+id/uxDrawable"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Drawables"
       ></Button>

   <TextView
       android:id="@+id/uxTextView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
         />
</LinearLayout>
